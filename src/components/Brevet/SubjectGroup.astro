---
interface Props {
  title: string;
  subjects: {
    id: string;
    name: string;
    coefficient: number;
  }[];
}

const { title, subjects } = Astro.props;
---

<div class="subject-group">
  <h3>{title}</h3>
  {subjects.map(subject => (
    <div class="grade-input">
      <label for={subject.id}>{subject.name}</label>
      <input 
        type="number" 
        id={subject.id} 
        name={subject.id}
        min="0" 
        max="20" 
        step="0.5" 
        placeholder="Note /20"
        data-coefficient={subject.coefficient}
      />
      <span class="coefficient">Coef. {subject.coefficient}</span>
    </div>
  ))}
</div>

<style>
  /* Styles remain unchanged */
</style>