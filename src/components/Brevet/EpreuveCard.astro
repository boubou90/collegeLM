---
interface Props {
  title: string;
  coefficient: number;
  duration: string;
  points: number;
}

const { title, coefficient, duration, points } = Astro.props;
---

<div class="epreuve-card" data-aos="fade-up">
  <h3>{title}</h3>
  <div class="details">
    <div class="detail">
      <span class="label">Coefficient</span>
      <span class="value">{coefficient}</span>
    </div>
    <div class="detail">
      <span class="label">Dur√©e</span>
      <span class="value">{duration}</span>
    </div>
    <div class="detail">
      <span class="label">Points</span>
      <span class="value">{points}</span>
    </div>
  </div>
</div>

<style>
  .epreuve-card {
    background: #f8fafc;
    border-radius: 0.75rem;
    padding: 1.5rem;
    border: 1px solid #e2e8f0;
  }

  h3 {
    color: var(--primary);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .details {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .detail {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .label {
    font-size: 0.875rem;
    color: #64748b;
  }

  .value {
    font-weight: 600;
    color: #1e293b;
  }

  @media (max-width: 640px) {
    .details {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>