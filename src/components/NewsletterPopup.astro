<script is:inline define:vars={{ delaySeconds, daysBeforeReshow }}>
  // Fonction pour vÃ©rifier si la popup doit Ãªtre affichÃ©e
  function shouldShowPopup() {
    const lastClosed = localStorage.getItem('newsletter-closed');
    if (!lastClosed) return true;

    const daysSinceClosed = (Date.now() - parseInt(lastClosed)) / (1000 * 60 * 60 * 24);
    return daysSinceClosed >= daysBeforeReshow;
  }

  // Afficher la popup aprÃ¨s le dÃ©lai
  if (shouldShowPopup()) {
    setTimeout(() => {
      const popup = document.getElementById('newsletter-popup');
      if (popup) {
        popup.style.display = 'flex';
      }
    }, delaySeconds * 1000);
  }

  // Fermer la popup
  const closeButton = document.getElementById('close-newsletter');
  const overlay = document.querySelector('.newsletter-overlay');

  function closePopup() {
    const popup = document.getElementById('newsletter-popup');
    if (popup) {
      popup.style.display = 'none';
      localStorage.setItem('newsletter-closed', Date.now().toString());
    }
  }

  if (closeButton) {
    closeButton.addEventListener('click', closePopup);
  }

  if (overlay) {
    overlay.addEventListener('click', closePopup);
  }

  // GÃ©rer la soumission du formulaire
  const form = document.getElementById('newsletter-form');
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const emailInput = document.getElementById('newsletter-email');
      const email = emailInput.value;

      // TODO: IntÃ©grer avec votre service d'emailing (Mailchimp, Sendinblue, etc.)
      console.log('Email soumis:', email);

      // Afficher le message de succÃ¨s
      const successMessage = document.getElementById('newsletter-success');
      if (successMessage) {
        form.style.display = 'none';
        successMessage.style.display = 'block';

        // Fermer automatiquement aprÃ¨s 3 secondes
        setTimeout(() => {
          closePopup();
        }, 3000);
      }
    });
  }

  // Fermer avec la touche Ã‰chap
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closePopup();
    }
  });
</script>
