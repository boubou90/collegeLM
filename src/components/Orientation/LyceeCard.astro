---
interface Props {
  name: string;
  website: string;
  successRate: number;
  specialties: string[];
  europeanSections?: string[];
}

const { name, website, successRate, specialties, europeanSections } = Astro.props;
---

<div class="lycee-card" data-aos="fade-up">
  <h3>{name}</h3>
  <p class="success-rate">Taux de réussite au bac : {successRate}%</p>
  
  <div class="info-section">
    <h4>Spécialités :</h4>
    <ul class="specialties-list">
      {specialties.map(specialty => (
        <li>{specialty}</li>
      ))}
    </ul>
  </div>

  {europeanSections && europeanSections.length > 0 && (
    <div class="info-section">
      <h4>Sections européennes :</h4>
      <ul class="euro-list">
        {europeanSections.map(section => (
          <li>{section}</li>
        ))}
      </ul>
    </div>
  )}

  <a href={website} target="_blank" rel="noopener noreferrer" class="website-link">
    Site internet : {website}
    <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
      <polyline points="15 3 21 3 21 9"></polyline>
      <line x1="10" y1="14" x2="21" y2="3"></line>
    </svg>
  </a>
</div>

<style>
  .lycee-card {
    background: white;
    padding: 1.5rem;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
  }

  h3 {
    color: var(--primary-dark);
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .success-rate {
    color: #16a34a;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .info-section {
    margin-bottom: 1rem;
  }

  .specialties-list, .euro-list {
    list-style: none;
    padding-left: 1rem;
  }

  .specialties-list li, .euro-list li {
    position: relative;
    padding-left: 1rem;
    margin-bottom: 0.25rem;
    color: #4b5563;
    font-size: 0.9rem;
  }

  .specialties-list li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--primary);
  }

  .euro-list li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--primary);
  }

  .website-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    margin-top: 1rem;
  }

  .website-link:hover {
    color: var(--primary-dark);
  }

  .icon {
    width: 1.2em;
    height: 1.2em;
  }
</style>