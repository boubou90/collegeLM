---
interface Props {
  username?: string;
  className?: string;
  fixed?: boolean;
}

const {
  username = "votre-nom", // À remplacer par votre nom Buy Me a Coffee
  className = "",
  fixed = true
} = Astro.props;

const buyMeCoffeeUrl = `https://www.buymeacoffee.com/${username}`;
---

<div class={`donation-wrapper ${fixed ? 'fixed-donation' : ''} ${className}`}>
  <a
    href={buyMeCoffeeUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="donation-button"
    aria-label="Soutenez-nous sur Buy Me a Coffee"
  >
    <div class="coffee-icon">☕</div>
    <div class="donation-text">
      <span class="donation-title">Soutenez ce site</span>
      <span class="donation-subtitle">Offrez-moi un café</span>
    </div>
  </a>
</div>

<style>
  .donation-wrapper {
    z-index: 50;
  }

  .fixed-donation {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    animation: slideInRight 0.5s ease-out;
  }

  .donation-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, #FFDD00 0%, #FBB034 100%);
    color: #1e293b;
    padding: 1rem 1.5rem;
    border-radius: 3rem;
    text-decoration: none;
    box-shadow:
      0 4px 14px rgba(251, 176, 52, 0.4),
      0 0 0 0 rgba(251, 176, 52, 0.5);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-weight: 600;
    animation: pulse 2s infinite;
  }

  .donation-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow:
      0 8px 25px rgba(251, 176, 52, 0.5),
      0 0 0 4px rgba(251, 176, 52, 0.2);
    animation: none;
  }

  .donation-button:active {
    transform: translateY(-1px) scale(1.02);
  }

  .coffee-icon {
    font-size: 1.75rem;
    animation: wiggle 1s ease-in-out infinite;
  }

  .donation-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .donation-title {
    font-size: 0.875rem;
    font-weight: 700;
    line-height: 1;
  }

  .donation-subtitle {
    font-size: 0.75rem;
    opacity: 0.8;
    line-height: 1;
    margin-top: 0.25rem;
  }

  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow:
        0 4px 14px rgba(251, 176, 52, 0.4),
        0 0 0 0 rgba(251, 176, 52, 0.5);
    }
    50% {
      box-shadow:
        0 4px 14px rgba(251, 176, 52, 0.4),
        0 0 0 8px rgba(251, 176, 52, 0);
    }
  }

  @keyframes wiggle {
    0%, 100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(-10deg);
    }
    75% {
      transform: rotate(10deg);
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .fixed-donation {
      bottom: 1rem;
      right: 1rem;
    }

    .donation-button {
      padding: 0.75rem 1rem;
    }

    .coffee-icon {
      font-size: 1.5rem;
    }

    .donation-title {
      font-size: 0.75rem;
    }

    .donation-subtitle {
      font-size: 0.65rem;
    }
  }

  /* Dark mode */
  [data-theme="dark"] .donation-button {
    background: linear-gradient(135deg, #FFDD00 0%, #FBB034 100%);
    color: #0f172a;
  }
</style>
