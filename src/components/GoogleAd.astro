---
interface Props {
  slot?: string;
  format?: 'auto' | 'horizontal' | 'vertical' | 'rectangle';
}

const { slot = '5227967907', format = 'auto' } = Astro.props;

// Define ad sizes based on format
const adStyle = {
  'auto': 'display: block; min-width: 250px; width: 100%; height: 90px;',
  'horizontal': 'display: block; width: 728px; height: 90px;',
  'vertical': 'display: block; width: 160px; height: 600px;',
  'rectangle': 'display: block; width: 300px; height: 250px;'
}[format];
---

<div class="ad-container">
  <ins 
    class="adsbygoogle"
    style={adStyle}
    data-ad-client="ca-pub-2885775986633981"
    data-ad-slot={slot}
    data-ad-format={format}
    data-full-width-responsive="true"></ins>
  <!-- Fallback for ad blockers -->
  <div class="ad-fallback">
    <p>Please consider disabling your ad blocker to support us.</p>
  </div>
</div>

<style>
  .ad-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 2rem 0;
    min-height: 90px;
    min-width: 250px;
    width: 100%;
    background: #f8fafc;
    border-radius: 0.5rem;
    overflow: hidden;
    position: relative;
  }

  .ad-fallback {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #f8fafc;
    color: #666;
    font-size: 0.875rem;
    text-align: center;
    padding: 1rem;
    align-items: center;
    justify-content: center;
  }

  .ad-container ins {
    display: block;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .ad-container ins {
      width: 100% !important;
      min-width: 250px !important;
      height: 100px !important;
    }

    .ad-fallback {
      display: flex;
    }
  }
</style>

<script is:inline>
  try {
    // Wait for the DOM to be fully loaded
    window.addEventListener('load', () => {
      // Ensure adsbygoogle is defined
      if (window.adsbygoogle) {
        (window.adsbygoogle = window.adsbygoogle || []).push({});
      }
    });
  } catch (error) {
    console.warn('AdSense error:', error);
  }
</script>
