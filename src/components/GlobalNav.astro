<script>
  function initGlobalNav() {
    const burger = document.getElementById('gnav-burger');
    const mobile = document.getElementById('gnav-mobile');

    burger?.addEventListener('click', () => {
      const isOpen = burger.getAttribute('aria-expanded') === 'true';
      burger.setAttribute('aria-expanded', String(!isOpen));
      mobile?.setAttribute('aria-hidden', String(isOpen));
    });

    // Sous-menus mobiles
    document.querySelectorAll<HTMLButtonElement>('.gnav-mobile-toggle').forEach(btn => {
      btn.addEventListener('click', () => {
        const isOpen = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', String(!isOpen));
        const sub = btn.nextElementSibling as HTMLElement | null;
        sub?.classList.toggle('is-open', !isOpen);
      });
    });

    // Fermer si clic hors menu
    document.addEventListener('click', (e) => {
      const nav = document.getElementById('global-nav');
      if (!nav?.contains(e.target as Node)) {
        burger?.setAttribute('aria-expanded', 'false');
