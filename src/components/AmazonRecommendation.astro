<style>
  .amazon-recommendation {
    background: linear-gradient(135deg, #fff9e6 0%, #ffffff 100%);
    border: 2px solid #ffa41c;
    border-radius: 1rem;
    padding: 1.5rem;
    margin: 2rem 0;
    box-shadow: 0 4px 12px rgba(255, 164, 28, 0.15);
    transition: all 0.3s ease;
  }

  [data-theme="dark"] .amazon-recommendation {
    background: linear-gradient(135deg, rgba(255, 164, 28, 0.1) 0%, rgba(30, 41, 59, 0.8) 100%);
    border-color: rgba(255, 164, 28, 0.4);
  }

  .amazon-recommendation:hover {
    box-shadow: 0 6px 20px rgba(255, 164, 28, 0.25);
    transform: translateY(-2px);
  }

  .amazon-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #ffa41c;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .amazon-icon {
    width: 1.2rem;
    height: 1.2rem;
  }

  .product-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .product-content {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .product-image-wrapper {
    background: white;
    border-radius: 0.75rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  [data-theme="dark"] .product-image-wrapper {
    background: rgba(255, 255, 255, 0.95);
  }

  .product-image {
    width: 100%;
    height: auto;
    max-height: 200px;
    object-fit: contain;
    border-radius: 0.5rem;
  }

  .product-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .product-title {
    color: #1e293b;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  [data-theme="dark"] .product-title {
    color: #f1f5f9;
  }

  .product-description {
    color: #475569;
    line-height: 1.6;
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  [data-theme="dark"] .product-description {
    color: #cbd5e1;
  }

  .product-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .price-badge {
    background: #10b981;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
  }

  .amazon-button {
    background: #ffa41c;
    color: #111;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    border: none;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .amazon-button:hover {
    background: #ff8c00;
    transform: translateX(5px);
  }

  .affiliate-disclaimer {
    font-size: 0.75rem;
    color: #64748b;
    text-align: center;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 164, 28, 0.2);
  }

  [data-theme="dark"] .affiliate-disclaimer {
    color: #94a3b8;
  }

  @media (max-width: 768px) {
    .product-content {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .product-image-wrapper {
      max-width: 200px;
      margin: 0 auto;
    }

    .product-footer {
      flex-direction: column;
      align-items: stretch;
    }

    .amazon-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
