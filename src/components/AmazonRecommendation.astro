---
interface Props {
  productTitle: string;
  productDescription: string;
  productImage: string;
  amazonLink: string;
  price?: string;
  className?: string;
}

const {
  productTitle,
  productDescription,
  productImage,
  amazonLink,
  price = "Voir le prix",
  className = ""
} = Astro.props;
---

