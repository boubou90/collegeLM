<style is:global>
  :root {
    --primary: #2563eb;
    --primary-dark: #1e3a8a;
    --background: #f8fafc;
    --text: #1e293b;
    --card-bg: #ffffff;
    --border-color: #e2e8f0;
  }

  [data-theme="dark"] {
    --primary: #3b82f6;
    --primary-dark: #60a5fa;
    --background: #0f172a;
    --text: #f1f5f9;
    --card-bg: #1e293b;
    --border-color: #334155;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background: var(--background);
    color: var(--text);
    scroll-behavior: smooth;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  body {
    min-height: 100vh;
    line-height: 1.6;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  /* Am√©liorer le contraste des cartes en mode sombre */
  [data-theme="dark"] .news-card,
  [data-theme="dark"] .highlight-card,
  [data-theme="dark"] .resource-card,
  [data-theme="dark"] .methodology-item,
  [data-theme="dark"] .intro-section,
  [data-theme="dark"] .presentation {
    background: var(--card-bg);
  }

  [data-theme="dark"] .level-button {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
  }

  .author-section {
    background: #f8fafc;
    padding: 1.5rem 1rem;
    margin-top: 2rem;
  }

  .author-inner {
    max-width: 720px;
    margin: 0 auto;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .author-avatar {
    font-size: 2.5rem;
    flex-shrink: 0;
    line-height: 1;
  }

  .author-name {
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.35rem;
    font-size: 1rem;
  }

  .author-desc {
    color: #475569;
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .author-link {
    color: #2563eb;
    font-size: 0.875rem;
    text-decoration: none;
  }

  .author-link:hover {
    text-decoration: underline;
  }

  [data-theme="dark"] .author-section {
    background: #1e293b;
  }

  [data-theme="dark"] .author-name {
    color: #f1f5f9;
  }

  [data-theme="dark"] .author-desc {
    color: #94a3b8;
  }

  .footer-ad {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .site-footer {
    text-align: center;
    padding: 1.5rem 1rem;
    margin-top: 1rem;
    border-top: 1px solid var(--border-color);
    font-size: 0.85rem;
  }

  .tipeee-banner {
    margin-bottom: 1rem;
  }

  .tipeee-description {
    font-size: 0.82rem;
    color: #64748b;
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  [data-theme="dark"] .tipeee-description {
    color: #94a3b8;
  }

  .tipeee-br {
    display: none;
  }

  @media (min-width: 480px) {
    .tipeee-br {
      display: inline;
    }
  }

  .tipeee-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, #e0e7ff 0%, #ede9fe 100%);
    color: #3730a3;
    padding: 0.7rem 1.5rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    border: 1px solid #c7d2fe;
    transition: all 0.25s ease;
  }

  .tipeee-link:hover {
    background: linear-gradient(135deg, #c7d2fe 0%, #ddd6fe 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(99,102,241,0.25);
    text-decoration: none;
  }

  [data-theme="dark"] .tipeee-link {
    background: linear-gradient(135deg, #1e1b4b 0%, #2e1065 100%);
    color: #c4b5fd;
    border-color: #4338ca40;
  }

  [data-theme="dark"] .tipeee-link:hover {
    background: linear-gradient(135deg, #312e81 0%, #4c1d95 100%);
  }

  .tipeee-heart {
    font-size: 1.1rem;
  }

  .tipeee-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    line-height: 1.2;
  }

  .tipeee-title {
    font-weight: 700;
    font-size: 0.85rem;
  }

  .tipeee-sub {
    font-size: 0.75rem;
    opacity: 0.8;
  }

  .tipeee-arrow {
    font-size: 1rem;
    opacity: 0.7;
  }

  .footer-sep {
    margin: 0 0.5rem;
    color: var(--border-color);
  }

  .site-footer a {
    color: var(--primary);
    text-decoration: none;
  }

  .site-footer a:hover {
    text-decoration: underline;
  }
</style>
