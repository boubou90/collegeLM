---
import Layout from './Layout.astro';
import BrevetNavButton from '../components/Brevet/BrevetNavButton.astro';
import GoogleAd from '../components/GoogleAd.astro';

interface Props {
  title: string;
  level: string;
  description?: string;
}

const { title, level, description } = Astro.props;
---

<Layout title={title} description={description}>
  <main>
    <nav class="top-nav" data-aos="fade-down">
      <!-- Bouton Accueil -->
      <a href="/" class="home-link">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        Accueil
      </a>

      

      <!-- Autres boutons de navigation -->
      <div class="nav-buttons">
        {level === '3eme' && (
          <>
            <a href="/3eme/brevet" class="nav-button">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
              Sujet Brevet Technologie
            </a>
            <a href="/3eme/orientation" class="nav-button">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
              Orientation
            </a>
            <a href="/3eme/revisions" class="nav-button">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
              </svg>
              Fiches de révision
            </a>
            <BrevetNavButton />
          </>
        )}
        {level !== '3eme' && (
          <a href={`/${level}/exercices`} class="nav-button">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            Exercices
          </a>
        )}
      </div>
    </nav>

    <!-- Publicité après la navigation -->
    <GoogleAd format="auto" lazy={false} className="mb-6" />

    <div class="content-wrapper">
      <slot />
    </div>

    <!-- Publicité en fin de page -->
    <GoogleAd format="rectangle" className="mx-auto mt-8 mb-4" />
  </main>
</Layout>

<style>
  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin-bottom: 2rem;
  }

  .home-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .home-link:hover {
    color: var(--primary-dark);
  }

  .nav-dropdown {
    position: relative;
  }

  .nav-dropdown .nav-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    color: white;
    background: var(--primary);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .nav-dropdown .nav-button:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
  }

  .dropdown-content {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    min-width: 200px;
  }

  .dropdown-item {
    display: block;
    padding: 0.75rem 1.5rem;
    color: var(--primary);
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .dropdown-item:hover {
    background: #f8fafc;
  }

  .nav-dropdown:hover .dropdown-content {
    display: block;
  }

  .nav-buttons {
    display: flex;
    gap: 1rem;
  }

  .nav-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    color: white;
    background: var(--primary);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .nav-button:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
  }

  .icon {
    width: 1.2em;
    height: 1.2em;
  }

  @media (max-width: 768px) {
    .top-nav {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

