---
import Layout from './Layout.astro';
import BrevetNavButton from '../components/Brevet/BrevetNavButton.astro';
import GoogleAd from '../components/GoogleAd.astro';
import Search from '../components/Search';

interface Props {
  title: string;
  level: string;
  description?: string;
}

const { title, level, description } = Astro.props;

const LEVEL_CONFIG: Record<string, { label: string; color: string; gradient: string }> = {
  '5eme': { label: '5ème',  color: '#3B82F6', gradient: 'linear-gradient(135deg, #3B82F6, #6366f1)' },
  '4eme': { label: '4ème',  color: '#10B981', gradient: 'linear-gradient(135deg, #10B981, #0891b2)' },
  '3eme': { label: '3ème',  color: '#F97316', gradient: 'linear-gradient(135deg, #F97316, #ef4444)' },
};
const levelConfig = LEVEL_CONFIG[level] ?? { label: level, color: '#6366f1', gradient: 'linear-gradient(135deg,#6366f1,#8b5cf6)' };

const courseSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Course",
  "name": title,
  "description": description ?? `Cours de technologie en ${levelConfig.label} au Collège Louise Michel Paris.`,
  "provider": {
    "@type": "EducationalOrganization",
    "name": "Collège Louise Michel Paris"
  },
  "educationalLevel": levelConfig.label,
  "isAccessibleForFree": true,
  "url": `https://collegelouisemichel.net${Astro.url.pathname}`
});
---

<Layout title={title} description={description}>
  <script is:inline type="application/ld+json" set:html={courseSchema}></script>
  <main>
    <nav class="top-nav" data-aos="fade-down">
      <!-- Bouton Accueil -->
      <a href="/" class="home-link">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        Accueil
      </a>

      

      <!-- Titre du niveau -->
      <div class="nav-level-title" style={`--grad: ${levelConfig.gradient}; --color: ${levelConfig.color}`}>
        <span class="nav-level-badge">{levelConfig.label}</span>
        <span class="nav-level-label">Technologie</span>
      </div>

      <!-- Barre de recherche -->
      <div class="nav-search">
        <Search client:load />
      </div>

      <!-- Autres boutons de navigation -->
      <div class="nav-buttons">
        {level === '3eme' && (
          <>
            <a href="/3eme/brevet" class="nav-button">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
              Sujet Brevet Technologie
            </a>
            <a href="/3eme/orientation" class="nav-button">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
              Orientation
            </a>
            <a href="/3eme/revisions" class="nav-button">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
              </svg>
              Fiches de révision
            </a>
            <BrevetNavButton />
          </>
        )}
        {level !== '3eme' && (
          <a href={`/${level}/exercices`} class="nav-button">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            Exercices
          </a>
        )}
      </div>
    </nav>

    <!-- Publicité après la navigation -->
    <GoogleAd format="auto" lazy={false} className="mb-6" />

    <div class="content-wrapper">
      <slot />
    </div>

    <!-- Publicité en fin de page -->
    <GoogleAd format="rectangle" className="mx-auto mt-8 mb-4" />
  </main>
</Layout>

