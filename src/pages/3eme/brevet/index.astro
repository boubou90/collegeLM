<ClassLayout title="Brevet des Collèges" level="3eme">
  <div class="brevet-container">
    <div class="header">
      <h1>Brevet des Collèges</h1>
      <button class="brevet-button" onclick="document.getElementById('subjects-modal').style.display='block'">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        Sujet Brevet Technologie
      </button>
    </div>

    <div id="subjects-modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2>Sujets de Brevet - Technologie</h2>
          <span class="close" onclick="document.getElementById('subjects-modal').style.display='none'">&times;</span>
        </div>
        <div class="subjects-table">
          <table>
            <thead>
              <tr>
                <th>Sujet</th>
                <th>Sujet PDF</th>
                <th>Corrigé</th>
                <th>Analyse fonctionnelle</th>
                <th>Chaînes d'énergie</th>
                <th>Programmation</th>
                <th>Réseau</th>
              </tr>
            </thead>
            <tbody>
              {brevetSubjects.map(subject => (
                <tr>
                  <td>{subject.name}</td>
                  <td>
                    <a href={subject.subject} class="pdf-link" target="_blank">PDF</a>
                  </td>
                  <td>
                    <a href={subject.correction} class="pdf-link" target="_blank">PDF</a>
                  </td>
                  <td>{subject.analyseFonctionnelle ? "✓" : ""}</td>
                  <td>{subject.chainesEnergie ? "✓" : ""}</td>
                  <td>{subject.programmation ? "✓" : ""}</td>
                  <td>{subject.reseau ? "✓" : ""}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <BrevetSection
      title="Présentation du DNB"
      description="Le diplôme national du brevet (DNB) évalue les connaissances et compétences acquises à la fin du collège. Il prend en compte le contrôle continu et les épreuves finales."
    />

    <BrevetSection
