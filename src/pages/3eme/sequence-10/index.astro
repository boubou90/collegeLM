---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import SequencePresentation from '../../../components/SequencePresentation.astro';
import ActivityLinks from '../../../components/ActivityLinks.astro';
import BackButton from '../../../components/BackButton.astro';

const description = `Cette dernière séquence est entièrement dédiée à la consolidation de toutes les notions du programme de 3ème en vue de l'épreuve de technologie du Brevet des collèges. Méthode, révisions thématiques et entraînement sur annales au programme :`;

const activities = [
  {
    title: "Bilan des notions clés",
    description: "Quelles sont les notions essentielles à maîtriser pour l'épreuve de technologie du Brevet ?"
  },
  {
    title: "Méthode pour l'épreuve écrite",
    description: "Comment aborder et réussir l'épreuve de technologie du Brevet des collèges ?"
  },
  {
    title: "Entraînement sur annales",
    description: "Comment s'entraîner efficacement avec les sujets des années précédentes ?"
  },
  {
    title: "Ressources — Révisions Brevet",
    description: "Fiches de révision, annales et ressources complémentaires pour le Brevet"
  }
];

const level = "3eme";
---

<ClassLayout title="Séquence 10 — Révisions Brevet - 3ème" level={level}>
  <BackButton href={`/${level}`} />
  <h1>Séquence 10 — Révisions Brevet</h1>

  <SequencePresentation
    title="Consolider toutes les notions pour réussir l'épreuve de technologie au Brevet"
    description={description}
    activities={activities.map(a => a.description)}
    question="Comment consolider l'ensemble du programme de technologie pour réussir l'épreuve du Brevet des collèges ?"
  />

  <ActivityLinks sequenceNumber={10} activities={activities} level={level} />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>
