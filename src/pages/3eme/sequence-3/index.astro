---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import SequencePresentation from '../../../components/SequencePresentation.astro';
import ActivityLinks from '../../../components/ActivityLinks.astro';
import BackButton from '../../../components/BackButton.astro';

const description = `Dans cette séquence, les élèves s'approprient les outils de l'analyse fonctionnelle : la bête à cornes pour identifier le besoin, le diagramme pieuvre pour lister les fonctions de service, et le cahier des charges fonctionnel (CDCF) pour formaliser les exigences d'un projet technique :`;

const activities = [
  {
    title: "La bête à cornes",
    description: "Comment identifier le besoin d'un objet technique avec la bête à cornes ?"
  },
  {
    title: "Le diagramme pieuvre",
    description: "Comment lister les fonctions de service avec le diagramme pieuvre ?"
  },
  {
    title: "Le cahier des charges fonctionnel (CDCF)",
    description: "Comment rédiger un cahier des charges fonctionnel ?"
  },
  {
    title: "Ressources — Analyse fonctionnelle",
    description: "Documents et ressources complémentaires sur l'analyse fonctionnelle"
  }
];

const level = "3eme";
---

<ClassLayout title="Séquence 3 — Analyse fonctionnelle - 3ème" level={level}>
  <BackButton href={`/${level}`} />
  <h1>Séquence 3 — Analyse fonctionnelle</h1>

  <SequencePresentation
    title="Appliquer les outils d'analyse fonctionnelle : bête à cornes, pieuvre, CDCF"
    description={description}
    activities={activities.map(a => a.description)}
    question="Comment identifier et formaliser les fonctions d'un objet technique avec les outils de l'analyse fonctionnelle ?"
  />

  <ActivityLinks sequenceNumber={3} activities={activities} level={level} />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>
