---
import ClassLayout from '../../layouts/ClassLayout.astro';
import ProgramPresentation from '../../components/ProgramPresentation.astro';
import SequenceButtons from '../../components/SequenceButtons.astro';
import BrevetCountdown from '../../components/BrevetCountdown';

const level = "3eme";
const programDescription = `En classe de troisième, le programme de technologie comprend l'étude des objets techniques, l'analyse de leur fonctionnement et leur impact sur la société. On aborde également des activités pratiques qui relient les sciences à la technologie, souvent à travers des projets de design et de conception. Ce programme vise à amener les élèves à développer une compréhension critique des technologies et de leurs applications dans divers domaines, y compris des liaisons avec les sciences de la vie et de la terre (SVT) et la physique-chimie.

Séquence 1 : Les chaînes d'énergie et d'information`;

const cours = [
  { label: "Chaînes d'énergie et d'information", href: "/3eme/cours/cours-chaine-energie-information", color: "#ef4444" },
  { label: "Adressage IP",                        href: "/3eme/cours/adressage-IP",                   color: "#3b82f6" },
  { label: "La Bête à Cornes",                    href: "/3eme/cours/la-bete-a-cornes",               color: "#10b981" },
  { label: "Étude du Besoin",                     href: "/3eme/cours/etude-du-besoin",                color: "#f59e0b" },
  { label: "Les Logigrammes",                     href: "/3eme/cours/les-logigrammes",                color: "#8b5cf6" },
  { label: "Les Formes d'Énergies",               href: "/3eme/cours/les-formes-d-energies",          color: "#0891b2" },
];
---

<ClassLayout title="Cours Technologie 3ème — Révisions Brevet, Orientation" level={level} description="Cours de technologie en 3ème : préparation au Brevet, projets avancés et orientation post-3ème. Ressources gratuites Collège Louise Michel.">

  <BrevetCountdown client:load />

  <ProgramPresentation
    title="Présentation du Programme"
    description={programDescription}
  />

  <!-- COURS -->
  <h2 class="section-title" data-aos="fade-up">Cours</h2>
  <div class="card-grid" data-aos="fade-up">
    {cours.map((c, i) => (
      <a
        href={c.href}
        class="card"
        style={`--c: ${c.color}`}
        data-aos="fade-up"
        data-aos-delay={i * 80}
      >
        <span class="card-badge">3ème</span>
        <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
          <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
        </svg>
        <span class="card-label">{c.label}</span>
      </a>
    ))}
  </div>

  <!-- SÉQUENCES -->
  <h2 class="section-title" data-aos="fade-up">Séquences</h2>
  <SequenceButtons count={10} level={level} />

</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.4rem;
    font-weight: 800;
    color: #1e293b;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.4rem;
    border-bottom: 3px solid #e2e8f0;
    letter-spacing: 0.01em;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1.5rem 1rem 1rem;
    background: var(--c);
    color: white;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.12);
    overflow: hidden;
  }

  .card:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    filter: brightness(1.08);
  }

  .card-badge {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: rgba(255, 255, 255, 0.22);
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    padding: 0.15rem 0.5rem;
    border-radius: 999px;
    letter-spacing: 0.03em;
    backdrop-filter: blur(4px);
  }

  .card-icon {
    width: 1.8rem;
    height: 1.8rem;
    opacity: 0.9;
  }

  .card-label {
    font-size: 0.875rem;
    font-weight: 700;
    text-align: center;
    line-height: 1.3;
  }

  @media (max-width: 768px) {
    .card-grid {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    }
  }
</style>
