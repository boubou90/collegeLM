---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import SequencePresentation from '../../../components/SequencePresentation.astro';
import ActivityLinks from '../../../components/ActivityLinks.astro';
import BackButton from '../../../components/BackButton.astro';

const description = `Dans cette séquence, les élèves conçoivent et programment des systèmes robotisés et automatisés. Ils analysent le rôle des capteurs et des actionneurs, puis programment des comportements autonomes pour relever un défi robotique en équipe :`;

const activities = [
  {
    title: "Analyse d'un système robotisé",
    description: "Comment analyser la structure et les composants d'un système robotisé ?"
  },
  {
    title: "Capteurs, actionneurs et effecteurs",
    description: "Quel est le rôle des capteurs, actionneurs et effecteurs dans un système automatisé ?"
  },
  {
    title: "Défi robotique — programmer l'autonomie",
    description: "Comment programmer un robot pour qu'il réalise une mission en autonomie ?"
  },
  {
    title: "Ressources — Robotique et automatismes",
    description: "Documents et ressources complémentaires sur la robotique et les systèmes automatisés"
  }
];

const level = "3eme";
---

<ClassLayout title="Séquence 9 — Robotique et automatismes - 3ème" level={level}>
  <BackButton href={`/${level}`} />
  <h1>Séquence 9 — Robotique et automatismes</h1>

  <SequencePresentation
    title="Concevoir et programmer des systèmes robotisés et automatisés"
    description={description}
    activities={activities.map(a => a.description)}
    question="Comment concevoir et programmer un système robotisé pour qu'il réalise une mission en autonomie ?"
  />

  <ActivityLinks sequenceNumber={9} activities={activities} level={level} />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>
