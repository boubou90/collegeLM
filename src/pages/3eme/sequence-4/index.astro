---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import SequencePresentation from '../../../components/SequencePresentation.astro';
import ActivityLinks from '../../../components/ActivityLinks.astro';
import BackButton from '../../../components/BackButton.astro';

const description = `Dans cette séquence, les élèves découvrent les outils de conception et de modélisation technique. De la représentation 2D au dessin coté, jusqu'à la maquette numérique réalisée avec un logiciel de CAO, ils apprennent à concrétiser et formaliser leurs solutions techniques :`;

const activities = [
  {
    title: "Représentation et dessin technique",
    description: "Comment représenter et décrire une solution technique avec le dessin technique ?"
  },
  {
    title: "La cotation et les normes",
    description: "Comment coter un dessin technique en respectant les normes ?"
  },
  {
    title: "La maquette numérique (CAO)",
    description: "Comment réaliser une maquette numérique d'un objet avec un logiciel de CAO ?"
  },
  {
    title: "Ressources — Conception technique",
    description: "Documents et ressources complémentaires sur la conception et la modélisation"
  }
];

const level = "3eme";
---

<ClassLayout title="Séquence 4 — Conception et modélisation - 3ème" level={level}>
  <BackButton href={`/${level}`} />
  <h1>Séquence 4 — Conception et modélisation</h1>

  <SequencePresentation
    title="Concevoir et modéliser des solutions techniques innovantes"
    description={description}
    activities={activities.map(a => a.description)}
    question="Comment représenter et modéliser une solution technique pour pouvoir la fabriquer ?"
  />

  <ActivityLinks sequenceNumber={4} activities={activities} level={level} />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>
