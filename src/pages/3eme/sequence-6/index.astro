---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import SequencePresentation from '../../../components/SequencePresentation.astro';
import ActivityLinks from '../../../components/ActivityLinks.astro';
import BackButton from '../../../components/BackButton.astro';

const description = `Dans cette séquence, les élèves approfondissent la programmation pour contrôler des systèmes automatisés. Ils maîtrisent les logigrammes, les variables, les boucles et les conditions, puis programment un microcontrôleur pour piloter un système réel :`;

const activities = [
  {
    title: "Les logigrammes et les algorithmes",
    description: "Comment représenter un algorithme sous forme de logigramme ?"
  },
  {
    title: "Variables, boucles et conditions",
    description: "Comment utiliser les variables, boucles et conditions en programmation ?"
  },
  {
    title: "Programmer un système automatisé",
    description: "Comment programmer un microcontrôleur pour contrôler un système automatisé ?"
  },
  {
    title: "Ressources — Programmation avancée",
    description: "Documents et ressources complémentaires sur la programmation et les algorithmes"
  }
];

const level = "3eme";
---

<ClassLayout title="Séquence 6 — Programmation avancée - 3ème" level={level}>
  <BackButton href={`/${level}`} />
  <h1>Séquence 6 — Programmation avancée</h1>

  <SequencePresentation
    title="Approfondir la programmation pour contrôler des systèmes automatisés"
    description={description}
    activities={activities.map(a => a.description)}
    question="Comment programmer un système automatisé pour qu'il réagisse intelligemment à son environnement ?"
  />

  <ActivityLinks sequenceNumber={6} activities={activities} level={level} />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>
