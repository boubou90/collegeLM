---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import BackButton from '../../../components/BackButton.astro';

const buttons = [
  {
    title: "Lycées Généraux et Technologiques",
    href: "/3eme/orientation/lycee-general"
  },
  {
    title: "Lycées Professionnels", 
    href: "/3eme/orientation/lycee-professionnel"
  }
];
---

<ClassLayout title="Lycées Parisiens" level="3eme">
  <div class="container">
    <BackButton href="/3eme/orientation" />
    <h1>Lycées Parisiens</h1>

    <div class="introduction" data-aos="fade-up">
      <p>
        Découvrez les différents lycées de Paris, leurs spécialités et leurs formations.
        Vous pouvez explorer les lycées généraux et technologiques ou les lycées professionnels
        selon votre projet d'orientation.
      </p>
    </div>

    <div class="buttons-grid">
      {buttons.map(button => (
        <a href={button.href} class="choice-button" data-aos="fade-up">
          {button.title}
        </a>
      ))}
    </div>
  </div>
</ClassLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    color: var(--primary-dark);
    margin: 2rem 0;
    font-size: 2.5rem;
  }

  .introduction {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    margin-bottom: 3rem;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
  }

  .introduction p {
    color: #64748b;
    line-height: 1.6;
    font-size: 1.1rem;
  }

  .buttons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .choice-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: white;
    border-radius: 1rem;
    text-decoration: none;
    color: inherit;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    font-size: 1.4rem;
    font-weight: 500;
    text-align: center;
  }

  .choice-button:hover {
    transform: translateY(-5px);
    background: var(--primary);
    color: white;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .choice-button {
      padding: 1.5rem;
      font-size: 1.2rem;
    }
  }
</style>