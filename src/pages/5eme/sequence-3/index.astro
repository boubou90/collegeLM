---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import SequencePresentation from '../../../components/SequencePresentation.astro';
import ActivityLinks from '../../../components/ActivityLinks.astro';
import BackButton from '../../../components/BackButton.astro';

const description = "Dans cette séquence, les élèves apprennent à collecter, trier et analyser des données; comparer des principes techniques pour une même fonction technique.";

const activities = [
  {
    title: "Lancement de séquence",
    description: "Comment comparer les évolutions technologiques d'un objet technique ?"
  },
  {
    title: "Collecte et analyse",
    description: "Comment savoir comment les objets étaient avant ?"
  },
  {
    title: "Comparaison technique",
    description: "Comment regrouper et comparer les objets techniques ?"
  },
  {
    title: "Ressources",
    description: "Ressources complémentaires sur l'évolution des objets techniques"
  }
];
---

<ClassLayout title="Séquence 3 - 5ème" level="5eme">
  <BackButton href="/5eme" />
  <h1>Séquence 3</h1>
  
  <SequencePresentation 
    title="Présentation de la séquence"
    description={description}
    activities={activities.map(a => a.description)}
  />

  <ActivityLinks sequenceNumber={3} activities={activities} level="5eme" />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>
