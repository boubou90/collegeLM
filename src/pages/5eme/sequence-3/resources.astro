---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import BackButton from '../../../components/BackButton.astro';
import KnowledgeSheet from '../../../components/KnowledgeSheet.astro';
import VideoResource from '../../../components/VideoResource.astro';

const courseResources = [
  {
    title: "Frise chronologique",
    description: "Document présentant l'évolution chronologique des objets techniques à travers les époques, mettant en évidence les innovations majeures et leurs contextes historiques.",
    pdfUrl: "/documents/5eme/sequence-3/resources/Frise chrono.pdf"
  },
  {
    title: "Familles d'objets",
    description: "Classification détaillée des différentes familles d'objets techniques, leurs caractéristiques communes et leurs spécificités.",
    pdfUrl: "/documents/5eme/sequence-3/resources/Image 2 listes familles objets.pdf"
  },
  {
    title: "Fiche ressource évolution",
    description: "Document complet sur les principes d'évolution des objets techniques, incluant des exemples concrets et des analyses détaillées.",
    pdfUrl: "/documents/5eme/sequence-3/resources/Fiche ressource évolution activité 3.pdf"
  }
];

const studentResources = [
  {
    title: "Méthodes de recherche historique",
    description: "Guide méthodologique pour effectuer des recherches sur l'histoire des objets techniques, incluant des sources fiables et des techniques de documentation.",
    pdfUrl: "/documents/5eme/sequence-3/activite-2/methodes-recherche.pdf"
  },
  {
    title: "Comparaison technique",
    description: "Document détaillant les méthodes pour comparer différents principes techniques et analyser leur évolution.",
    pdfUrl: "/documents/5eme/sequence-3/activite-3/comparaison-technique.pdf"
  },
  {
    title: "Évolution des objets",
    description: "Document de synthèse sur l'évolution des objets techniques et leurs principes de fonctionnement.",
    pdfUrl: "/documents/5eme/sequence-3/activite-1/evolution-objets.pdf"
  }
];

---

<ClassLayout title="Ressources - Séquence 3 - 5ème" level="5eme">
  <BackButton href="/5eme/sequence-3" />
  <h1>Ressources - Évolution des objets techniques</h1>

  <section class="resources-section" data-aos="fade-up">
    <h2>Synthèse</h2>
    <VideoResource
      title="Synthèse sur l'évolution des objets techniques"
      description="Cette vidéo résume les concepts clés de la séquence sur l'évolution des objets techniques, leur analyse et leur comparaison. Elle reprend les notions essentielles vues en classe et propose une vision globale de la thématique."
      videoUrl="https://tube-sciences-technologies.apps.education.fr/videos/embed/a991783e-c911-4543-8c76-4a250d177030"
    />
  </section>

  <section class="resources-section" data-aos="fade-up">
    <h2>Documents de cours</h2>
    <div class="knowledge-sheets">
      {courseResources.map(resource => (
        <KnowledgeSheet
          title={resource.title}
          description={resource.description}
          pdfUrl={resource.pdfUrl}
        />
      ))}
    </div>
  </section>

  <section class="resources-section" data-aos="fade-up">
    <h2>Documents pour les élèves</h2>
    <div class="knowledge-sheets">
      {studentResources.map(resource => (
        <KnowledgeSheet
          title={resource.title}
          description={resource.description}
          pdfUrl={resource.pdfUrl}
        />
      ))}
    </div>
  </section>
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }

  .resources-section {
    background: linear-gradient(145deg, #ffffff, #f8fafc);
    border-radius: 1rem;
    padding: 2rem;
    margin-top: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
  }

  h2 {
    color: var(--primary-dark);
    margin-bottom: 1.5rem;
    font-size: 1.6rem;
  }

  .knowledge-sheets {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .resources-section + .resources-section {
    margin-top: 2rem;
  }
</style>