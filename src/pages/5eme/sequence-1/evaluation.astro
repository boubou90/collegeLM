---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import BackButton from '../../../components/BackButton.astro';
import KnowledgeSheet from '../../../components/KnowledgeSheet.astro';

const knowledgeSheets = [
  {
    title: "Le réseau local et Internet",
    description: "Comprendre la différence entre un réseau local et le réseau mondial (Internet)",
    pdfUrl: "/documents/5eme/sequence-1/evaluation/fiche-1-reseaux.pdf"
  },
  {
    title: "Les composants d'un réseau",
    description: "Le rôle d'un terminal, d'une carte réseau, des liaisons (filaires ou non filaires), d'un commutateur, d'un routeur, d'un serveur",
    pdfUrl: "/documents/5eme/sequence-1/evaluation/fiche-2-composants.pdf"
  },
  {
    title: "Les adresses IP et le routage",
    description: "Le rôle et la structure d'une adresse IP, des tables de routage",
    pdfUrl: "/documents/5eme/sequence-1/evaluation/fiche-3-adresses-ip.pdf"
  }
];
---

<ClassLayout title="Évaluation - Séquence 1 - 5ème" level="5eme">
  <BackButton href="/5eme/sequence-1" />
  <h1>Évaluation - Les réseaux</h1>

  <section class="evaluation-section" data-aos="fade-up">
    <h2>Fiches de connaissances</h2>
    <div class="knowledge-sheets">
      {knowledgeSheets.map(sheet => (
        <KnowledgeSheet
          title={sheet.title}
          description={sheet.description}
          pdfUrl={sheet.pdfUrl}
        />
      ))}
    </div>
  </section>
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }

  .evaluation-section {
    background: linear-gradient(145deg, #ffffff, #f8fafc);
    border-radius: 1rem;
    padding: 2rem;
    margin-top: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
  }

  h2 {
    color: var(--primary-dark);
    margin-bottom: 1.5rem;
    font-size: 1.6rem;
  }

  .knowledge-sheets {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>