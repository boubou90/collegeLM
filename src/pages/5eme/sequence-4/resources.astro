---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import BackButton from '../../../components/BackButton.astro';
import KnowledgeSheet from '../../../components/KnowledgeSheet.astro';
import VideoResource from '../../../components/VideoResource.astro';

const courseResources = [
  {
    title: "Guide SketchUp",
    description: "Guide complet sur l'utilisation du logiciel SketchUp, ses outils et fonctionnalités principales",
    pdfUrl: "/documents/5eme/resources/guide-sketchup.pdf"
  },
  {
    title: "Méthode de modélisation",
    description: "Fiche méthode détaillant les étapes de construction d'un volume simple et son positionnement précis",
    pdfUrl: "/documents/5eme/sequence-4/activite-1/resources/methode-modelisation.pdf"
  }
];

const studentResources = [
  {
    title: "Exercices supplémentaires",
    description: "Exercices d'entraînement sur la modélisation 3D",
    pdfUrl: "/documents/5eme/sequence-4/ressources/exercices-supplementaires.pdf"
  }
];
---

<ClassLayout title="Ressources - Séquence 4 - 5ème" level={level}>
  <BackButton href={`/${level}/sequence-4`} />
  <h1>Ressources - Modélisation 3D</h1>

  <section class="resources-section" data-aos="fade-up">
    <h2>Documents de cours</h2>
    <div class="knowledge-sheets">
      {courseResources.map(resource => (
        <KnowledgeSheet
          title={resource.title}
          description={resource.description}
          pdfUrl={resource.pdfUrl}
        />
      ))}
    </div>
  </section>

  <section class="resources-section" data-aos="fade-up">
    <h2>Documents pour les élèves</h2>
    <div class="knowledge-sheets">
      {studentResources.map(resource => (
        <KnowledgeSheet
          title={resource.title}
          description={resource.description}
          pdfUrl={resource.pdfUrl}
        />
      ))}
    </div>
  </section>
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }

  .resources-section {
    background: linear-gradient(145deg, #ffffff, #f8fafc);
    border-radius: 1rem;
    padding: 2rem;
    margin-top: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
  }

  h2 {
    color: var(--primary-dark);
    margin-bottom: 1.5rem;
    font-size: 1.6rem;
  }

  .knowledge-sheets {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .resources-section + .resources-section {
    margin-top: 2rem;
  }
</style>
