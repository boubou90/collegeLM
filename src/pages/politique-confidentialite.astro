  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  h1 {
    color: var(--primary-dark);
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  h2 {
    color: var(--primary-dark);
    font-size: 1.3rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  p, li {
    color: #4b5563;
    line-height: 1.8;
    margin-bottom: 0.75rem;
  }

  ul {
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  a {
    color: var(--primary);
  }

  em {
    color: #64748b;
    font-size: 0.9rem;
  }
</style>
