---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import ActivitySection from '../../../components/ActivitySection.astro';
import BackButton from '../../../components/BackButton.astro';

const level = "4eme";

const documents = [
  {
    title: "Les outils du cahier des charges",
    pdfUrl: "/documents/4eme/sequence-2/outils-cdc.pdf"
  }
];
---

<ClassLayout title="Activité 1 - Séquence 2 - 4ème" level={level}>
  <BackButton href={`/${level}/sequence-2`} />
  <h1>Activité 1 - Les outils du cahier des charges</h1>
  
  <ActivitySection
    title="Analyse fonctionnelle d'un portail automatisé"
    description="Dans cette activité, nous allons approfondir l'analyse fonctionnelle en utilisant le diagramme 'Bête à Cornes' et une carte mentale pour exprimer la fonction d'usage et les contraintes d'un portail automatisé."
    documents={documents}
  />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>