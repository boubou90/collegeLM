---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import SequencePresentation from '../../../components/SequencePresentation.astro';
import ActivityLinks from '../../../components/ActivityLinks.astro';
import BackButton from '../../../components/BackButton.astro';

const description = `Dans cette séquence, les élèves apprennent à comprendre le fonctionnement d’une maison domotique en analysant les systèmes automatisés (lumière, volets, chauffage), en identifiant les chaînes d'information et d'énergie, et en associant forme et procédé de fabrication :`;

const activities = [
  {
    title: "Fiche de lancement",
    description: "Un lancement de séquence pour faire émerger la problématique générale : «Comment une maison domotique gère-t-elle automatiquement l'éclairage, l'ouverture des volets, le chauffage… pour optimiser le confort et l'efficacité énergétique ? »"
  },
  {
    title: "Le numérique au quotidien, savoir l’utiliser sans danger",
    description: "Comment utiliser les outils numérique au quotidien ?"
  }
];

const level = "4eme";
---

<ClassLayout title="Séquence 5 - 4ème" level={level}>
  <BackButton href={`/${level}`} />
  <h1>Séquence 5 - Comprendre la structure et le fonctionnement de la maison connectée</h1>
  
  <SequencePresentation 
    title="L’Intelligence artificielle générative, la sécurité des données"
    description={description}
    activities={activities.map(a => a.description)}
  />

  <ActivityLinks sequenceNumber={5} activities={activities} level={level} />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>
