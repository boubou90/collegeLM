---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import SequencePresentation from '../../../components/SequencePresentation.astro';
import ActivityLinks from '../../../components/ActivityLinks.astro';
import BackButton from '../../../components/BackButton.astro';

const description = `Dans cette séquence, les élèves apprennent à identifier les constituants d’un réseau informatique, à configurer des ordinateurs (adressage IP, connexion WiFi) et à vérifier leur bon fonctionnement dans une salle de technologie. Ce scénario  met en avant les enjeux citoyens et techniques d’un réseau bien configuré.`;

const activities = [
  {
    title: "Fiche de lancement",
    description: "Activité 1 : Comment paramétrer de nouveaux ordinateurs pour qu’ils puissent communiquer sur le réseau ? (révisions de 5ème)"
  },
  {
    title: "Une classe mobile est installée, mais les ordinateurs portables ne parviennent pas à se connecter au réseau de la salle.",
    description: "Activité 2 :  Analyser le réseau existant : « Comment est paramétré le réseau actuel ? "
  },
  {
    title: "Pour augmenter le nombre de postes disponibles, le professeur décide d’utiliser la classe mobile.",
    description: "Activité 3 : Ajouter de nouveaux matériels : Comment faire communiquer les ordinateurs entre eux ? "
  },
  {
    title: "Ressources",
    description: "Documents ressources à exploiter"
  }
];

const level = "4eme";
---

<ClassLayout title="Séquence 7 - 4ème" level={level}>
  <BackButton href={`/${level}`} />
  <h1>Séquence 7 - Créer un réseau local associé à une borne WiFi</h1>

  
  <SequencePresentation 
    title="La station météo et la gestion des données"
    description={description}
    activities={activities.map(a => a.description)}
    question="Comment configurer un réseau local pour que plusieurs équipements puissent communiquer entre eux ?"
  />

  <ActivityLinks sequenceNumber={7} activities={activities} level={level} />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>
