---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import ActivitySection from '../../../components/ActivitySection.astro';
import BackButton from '../../../components/BackButton.astro';

const level = "4eme";

const documents = [
  {
    title: "Projet Barrière automatique",
    pdfUrl: "/documents/4eme/sequence-1/activite-4/projet-barriere.pdf"
  }
];
---

<ClassLayout title="Activité 4 - Séquence 1 - 4ème" level={level}>
  <BackButton href={`/${level}/sequence-1`} />
  <h1>Activité 4 - Projet Barrière automatique</h1>
  
  <ActivitySection
    title="Conception et programmation d'une barrière automatique"
    description="Projet pratique où nous allons concevoir et programmer une barrière automatique en appliquant les connaissances acquises sur les systèmes automatiques."
    documents={documents}
  />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>