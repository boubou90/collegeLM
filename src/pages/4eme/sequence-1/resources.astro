---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import BackButton from '../../../components/BackButton.astro';
import KnowledgeSheet from '../../../components/KnowledgeSheet.astro';

const level = "4eme";

const resources = [
  {
    title: "OST1w - Les intelligences artificielles génératives (IAG), prompts, avantages et biais (Hors programme)",
    description: "LES OBJETS ET SYSTÈMES TECHNIQUES : leurs usages et leurs indications à découvrir et analyser",
    pdfUrl: "/documents/4eme/sequence-1/resources/systemes-automatiques.pdf"
  }
];
---

<ClassLayout title="Ressources - Séquence 1 - 4ème" level={level}>
  <BackButton href={`/${level}/sequence-1`} />
  <h1>Ressources - Les intelligences artificielles génératives (IAG)</h1>

  <section class="resources-section" data-aos="fade-up">
    <h2>Documents de cours</h2>
    <div class="knowledge-sheets">
      {resources.map(resource => (
        <KnowledgeSheet
          title={resource.title}
          description={resource.description}
          pdfUrl={resource.pdfUrl}
        />
      ))}
    </div>
  </section>
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }

  .resources-section {
    background: linear-gradient(145deg, #ffffff, #f8fafc);
    border-radius: 1rem;
    padding: 2rem;
    margin-top: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
  }

  h2 {
    color: var(--primary-dark);
    margin-bottom: 1.5rem;
    font-size: 1.6rem;
  }

  .knowledge-sheets {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
