---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import ActivitySection from '../../../components/ActivitySection.astro';
import BackButton from '../../../components/BackButton.astro';

const level = "4eme";

const documents = [
  {
    title: "Chaînes d'information et d'énergie",
    pdfUrl: "/documents/4eme/sequence-1/activite-2/chaines.pdf"
  }
];
---

<ClassLayout title="Activité 2 - Séquence 1 - 4ème" level={level}>
  <BackButton href={`/${level}/sequence-1`} />
  <h1>Activité 2 - Chaînes d'information et d'énergie</h1>
  
  <ActivitySection
    title="Comment l'information et l'énergie circulent dans un système automatique ?"
    description="Découverte des chaînes d'information et d'énergie dans les systèmes automatiques. Nous analyserons comment les informations sont traitées et comment l'énergie est transformée pour réaliser les actions souhaitées."
    documents={documents}
  />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>