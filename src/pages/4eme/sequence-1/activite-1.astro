---
import ClassLayout from '../../../layouts/ClassLayout.astro';
import ActivitySection from '../../../components/ActivitySection.astro';
import BackButton from '../../../components/BackButton.astro';

const level = "4eme";

const documents = [
  {
    title: "Introduction aux systèmes automatiques",
    pdfUrl: "/documents/4eme/sequence-1/activite-1/introduction.pdf"
  }
];
---

<ClassLayout title="Activité 1 - Séquence 1 - 4ème" level={level}>
  <BackButton href={`/${level}/sequence-1`} />
  <h1>Activité 1 - Découverte des systèmes automatiques</h1>
  
  <ActivitySection
    title="Comment fonctionne un système automatique ?"
    description="Dans cette activité, nous allons découvrir ce qu'est un système automatique et identifier ses composants principaux à travers des exemples concrets de notre quotidien."
    documents={documents}
  />
</ClassLayout>

<style>
  h1 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 2rem;
  }
</style>